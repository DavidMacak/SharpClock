<Window x:Class="SharpClock.GetTitleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpClock"
        mc:Ignorable="d"
        Title="Lesson title" Height="150" Width="300" MinHeight="100" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBox x:Name="DialogTextBox" VerticalAlignment="Bottom" HorizontalAlignment="Center" TextWrapping="Wrap" Width="250" Height="50"/>
            <Button x:Name="confirmBtn" Height="20" Width="40" Content="Ok" Margin="0 5 0 0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="confirmBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
